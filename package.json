{
  "name": "language-first-interop",
  "version": "1.0.0",
  "description": "Language-First Interoperability: A Unified-Event Conversation Platform",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server/index.ts",
    "dev:backend": "bun --watch src/server/index.ts",
    "dev:frontend": "bun --port 3003 src/frontend/**/*.html src/frontends/**/*.html",
    "dev:fullstack": "bun --watch src/dev/index.ts",
    "frontend": "echo 'Available frontends:' && find src/frontend -name index.html | sed 's|src/frontend/||' | sed 's|/index.html||' | while read app; do echo \"  - $app: bunx --bun vite src/frontend/$app\"; done",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf data.db data.db-shm data.db-wal public",
    "build:frontend": "bun scripts/build-frontend.ts",
    "start:prod": "bun src/prod/index.ts"
  },
  "dependencies": {
    "@google/genai": "^1.13.0",
    "@modelcontextprotocol/sdk": "^1.17.2",
    "dayjs": "^1.11.10",
    "fast-json-patch": "^3.1.1",
    "hono": "^4.8.9",
    "marked": "^16.1.2",
    "openai": "^5.12.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "^1.2.19",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/yargs": "^17.0.33",
    "bun-types": "^1.2.19",
    "typescript": "^5.8.3"
  }
}
