{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", 
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "$lib/*": ["src/lib/*"],
      "$backend/*": ["src/backend/*"],  
      "$client/*": ["src/client/*"],
      "$agents/*": ["src/agents/*"],
      "$llm/*": ["src/llm/*"],
      "src/types/llm.types.js": ["src/types/llm.types.ts"],
      "design/agent-platform-types.js": ["src/types/agent.types.ts"]
    },
    "types": ["bun-types"]
  },
  "include": [
    "src/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}